<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1.Item动画" />

    <Button
        android:id="@+id/home_item_animation_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1.1listview item动画" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="2.Item操作" />

    <Button
        android:id="@+id/home_swipe_to_dismiss_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="2.1滑动删除" >
    </Button>

    <Button
        android:id="@+id/home_item_drag_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="2.2item拖动" >
    </Button>

    <Button
        android:id="@+id/home_multiple_item_dismiss_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="2.3多个item删除" >
    </Button>

    <Button
        android:id="@+id/home_item_expend_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="2.4列表展开" >
    </Button>

</LinearLayout>